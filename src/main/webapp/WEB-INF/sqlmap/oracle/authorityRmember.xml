<mapper namespace="authorityRmember">
	<select id="list" resultType="Map" parameterType="Map">
		select aut.AUTHORITY_NAME
		from member mem, authority aut
		where mem.AUTHORITY_SEQ=aut.AUTHORITY_SEQ
		and ID=#{ID}
	</select>



